<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/dimen_voice_padding">

    <TextView
        style="@style/DearOTextAppearance.Caption"
        android:layout_width="wrap_content"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="@string/voice_title_customer_concerns"
        android:textColor="@color/textColorSecondary" />

    <LinearLayout
        android:id="@+id/concernsContainerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    </LinearLayout>

    <TextView
        android:id="@+id/noConcernAddedView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="No Concerns added"
        android:textAppearance="@style/DearOTextAppearance.Caption"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/addConcernView"
        style="@style/DearOTextAppearance.Button.ColorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="@dimen/dimen_voice_row_min_height"
        android:text="@string/voice_button_add_concerns"
        android:textAllCaps="true" />

</LinearLayout>