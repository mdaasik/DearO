<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/card_padding">

            <TextView
                android:id="@+id/tv_job_listing_status"
                style="@style/Chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAppearance="@style/DearOTextAppearance.Caption"
                tools:text="JOB COMPLETED" />

            <TextView
                android:id="@+id/tv_job_listing_jcno"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="0.5"
                android:textAppearance="@style/DearOTextAppearance.Caption"
                tools:text="JC:001" />

            <ImageView
                android:id="@+id/iv_more_cta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_more_horizon_black_24dp"
                tools:ignore="ContentDescription"
                tools:visibility="visible" />

        </LinearLayout>

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="2dp"
            android:background="@color/light_grey" />

        <LinearLayout
            android:id="@+id/ll_parent_new_job_listing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/card_padding">

            <LinearLayout
                android:id="@+id/ll_parent_new_job_listing_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp">

                <TextView
                    android:id="@+id/tv_job_listing_reg_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:maxLines="2"
                    android:textAppearance="@style/DearOTextAppearance.SubtitleRegular"
                    android:textColor="@color/textColorPrimary"
                    tools:text="MH01AQ3746" />

                <TextView
                    android:id="@+id/tv_scanned_by_carpm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:drawableEnd="@drawable/ic_carpm_logo"
                    android:drawablePadding="8dp"
                    android:visibility="gone"
                    android:textAppearance="@style/DearOTextAppearance.SubtitleRegular"
                    android:textColor="@color/textColorPrimary"
                    tools:text="  |  Scanned by Carpm" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_job_listing_make_model"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_weight="0.7"
                    android:textAppearance="@style/DearOTextAppearance.Body.Medium.B2"
                    android:textColor="@color/textColorPrimary"
                    tools:text="Maruti Suzuki-Swift-Petrol" />

                <ImageView
                    android:id="@+id/iv_call_cta"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end"
                    android:layout_weight="0.3"
                    app:srcCompat="@drawable/ic_call_black_24dp"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_job_listing_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="8dp"
                android:textAppearance="@style/DearOTextAppearance.Body.Regular.B2"
                android:textColor="@color/textColorPrimary"
                tools:text="Atul more" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_weight="0.5">

                    <ImageView
                        android:id="@+id/iv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_timer_black_24dp"
                        tools:ignore="ContentDescription"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/tv_job_listing_time_remain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="8dp"
                        android:textAppearance="@style/DearOTextAppearance.Caption"
                        android:visibility="gone"
                        tools:text="02:30 more"
                        tools:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_weight="0.5">

                    <ImageView
                        android:id="@+id/iv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_money"
                        tools:ignore="ContentDescription"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/tv_job_listing_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginStart="8dp"
                        android:textAppearance="@style/DearOTextAppearance.Caption"
                        android:visibility="gone"
                        tools:text="Rs. 10,000.00 - 20,000"
                        tools:visibility="visible" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="4dp"
            android:background="@color/light_grey" />

        <LinearLayout
            android:id="@+id/ll_cta_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:gravity="center_vertical"
            android:minHeight="50dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/card_padding"
            android:paddingRight="@dimen/card_padding">

            <LinearLayout
                android:id="@+id/ll_cta_primary_parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_primary_cta_one"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="4dp"
                    app:srcCompat="@drawable/ic_continue_jobcard"
                    app:tint="@color/colorPrimaryDark"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/tv_primary_cta_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textAppearance="@style/DearOTextAppearance.Button.ColorPrimary"
                    tools:text="Continue Job Card" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_cta_secondary_parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center_vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:id="@+id/iv_secondary_cta"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/ic_cancel_jobcard"
                    app:tint="@color/colorPrimaryDark"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/tv_secondary_cta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textAppearance="@style/DearOTextAppearance.Button.ColorPrimary"
                    tools:text="Cancel Job Card" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    -
</androidx.cardview.widget.CardView>
