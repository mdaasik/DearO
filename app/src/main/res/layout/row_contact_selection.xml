<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contactSelectionParentView"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:gravity="center_vertical">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:src="@drawable/ic_smartphone_black_24dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/contactNumberView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:textAppearance="@style/DearOTextAppearance.Body.Regular.B1"
        tools:text="9000000000" />

</LinearLayout>