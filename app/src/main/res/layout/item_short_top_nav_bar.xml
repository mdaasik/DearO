<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/navItemParentView"
    android:padding="@dimen/dimen_quick_job_card_nav_padding">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_quick_jc_nav"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/navIconView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:tint="@color/white"
            tools:ignore="ContentDescription"
            tools:src="@drawable/ic_wrench_grey_24dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/navTitleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_quick_job_card_title_margin_top"
        android:textAppearance="@style/DearOTextAppearance.Caption"
        tools:text="Shop floor" />
</LinearLayout>