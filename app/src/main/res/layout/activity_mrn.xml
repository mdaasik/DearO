<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/pb_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mrnRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.carworkz.dearo.mrn.MrnActivity"
        tools:listitem="@layout/row_mrn" />


    <TextView
        android:id="@+id/noIssuedPartsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/mrn_screen_title_no_issued_parts"
        android:textAppearance="@style/DearOTextAppearance.H5.Medium"
        android:visibility="gone"
        tools:visibility="visible" />
</RelativeLayout>



