<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <!--<item name="android:dialogTheme">@style/DearODialogTheme</item>-->
        <item name="alertDialogTheme">@style/DearODialogTheme</item>
    </style>

    <style name="FabNormal" parent="Widget.Design.FloatingActionButton">
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:layout_width">@dimen/fab_normal</item>
        <item name="android:layout_height">@dimen/fab_normal</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
    </style>

    <style name="DearOTextAppearance" parent="TextAppearance.AppCompat" />

    <style name="DearOTextAppearance.H6">
        <item name="android:textSize">@dimen/H6</item>
    </style>

    <style name="DearOTextAppearance.H6.Medium">
        <item name="android:fontFamily">@string/font_family_sans_serif_medium</item>
    </style>

    <style name="DearOTextAppearance.H6.Regular">
        <item name="android:fontFamily">@string/font_family_sans_serif</item>
    </style>


    <style name="DearOTextAppearance.H5">
        <item name="android:textSize">@dimen/H5</item>
    </style>

    <style name="DearOTextAppearance.H5.Medium">
        <item name="android:fontFamily">@string/font_family_sans_serif_medium</item>
    </style>

    <style name="DearOTextAppearance.H5.Regular">
        <item name="android:fontFamily">@string/font_family_sans_serif</item>
    </style>

    <style name="DearOTextAppearance.SubtitleRegular">
        <item name="android:textSize">@dimen/subtitle_reg</item>
        <item name="android:fontFamily">@string/font_family_sans_serif</item>
    </style>


    <style name="DearOTextAppearance.SubtitleMedium">
        <item name="android:textSize">@dimen/subtitle_med</item>
        <item name="android:fontFamily">@string/font_family_sans_serif_medium</item>
    </style>

    <style name="DearOTextAppearance.Body" />

    <style name="DearOTextAppearance.Body.Regular">
        <item name="android:fontFamily">@string/font_family_sans_serif</item>
    </style>

    <style name="DearOTextAppearance.Body.Medium">
        <item name="android:fontFamily">@string/font_family_sans_serif_medium</item>
    </style>

    <style name="DearOTextAppearance.Body.Medium.B1">
        <item name="android:textSize">@dimen/body1</item>
    </style>

    <style name="DearOTextAppearance.Body.Medium.B2">
        <item name="android:textSize">@dimen/body2</item>
    </style>

    <style name="DearOTextAppearance.Body.Regular.B1">
        <item name="android:textSize">@dimen/body1</item>
    </style>

    <style name="DearOTextAppearance.Body.Regular.B2">
        <item name="android:textSize">@dimen/body2</item>
    </style>

    <style name="DearOTextAppearance.Caption">
        <item name="android:textSize">@dimen/caption</item>
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:fontFamily">@string/font_family_sans_serif</item>
    </style>
    
    <style name="DearOTextAppearance.Caption.Link">
        <item name="android:textSize">@dimen/caption</item>
        <item name="android:textColor">@color/link_color</item>
        <item name="android:fontFamily">@string/font_family_sans_serif</item>
    </style>

    <style name="DearOTextAppearance.Error">
        <item name="android:textSize">@dimen/caption</item>
        <item name="android:textColor">@color/error</item>
        <item name="android:fontFamily">@string/font_family_sans_serif</item>
    </style>

    <style name="DearOTextAppearance.Button">
        <item name="android:textSize">@dimen/button</item>
        <item name="android:fontFamily">@string/font_family_sans_serif_medium</item>

    </style>

    <style name="DearOTextAppearance.Button.ColorPrimary">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DearOTextAppearance.Button.TextColorPrimary">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="DearOButton" parent="Widget.AppCompat.Button" />

    <style name="DearOButton.Fill" parent="DearOButton">
        <item name="android:textAppearance">@style/DearOTextAppearance.Button.ColorPrimary</item>
        <item name="android:background">@drawable/fill_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:elevation">@dimen/buttonElevation</item>
    </style>

    <style name="DearOButton.Fill.Drawable" parent="DearOButton.Fill">
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="DearOButton.Outline.Drawable" parent="DearOButton.Outline">
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="DearOButton.Outline" parent="DearOButton">
        <item name="android:textAppearance">@style/DearOTextAppearance.Button.ColorPrimary</item>
        <item name="android:background">@drawable/outline_button</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="DearOTextAppearance.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">@string/font_family_sans_serif</item>

    </style>

    <style name="Chip">
        <item name="android:minHeight">32dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:background">@drawable/shape_chip</item>
    </style>

    <style name="TextViewLogin" parent="AppTheme">

        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--<style name="TextAppearance.InputLayout.Medium" parent="@android:style/TextAppearance.DeviceDefault.Medium">-->
        <!--<item name="android:textColor">@color/black</item>-->
        <!--<item name="android:textSize">13sp</item>-->
        <!--&lt;!&ndash;<item name="textColorError">@color/red</item>&ndash;&gt;-->
    <!--</style>-->

    <style name="MyAppTheme.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="Theme.CancelClose" parent="android:Theme.Holo">
        <item name="android:homeAsUpIndicator">@drawable/ic_clear_white_24dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="FullscreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="UnderLineSpinner" parent="Base.Widget.AppCompat.Spinner.Underlined">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SpinnerTheme">
        <item name="android:colorAccent">@color/black</item>
        <item name="android:colorControlNormal">@color/black</item>
    </style>

    <style name="RadioStyle" parent="Base.Widget.AppCompat.CompoundButton.RadioButton">
        <item name="background">@drawable/custom_radio_selector</item>
        <item name="android:textColor">@color/state_list</item>
    </style>

    <style name="spinner_style">
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:popupBackground">#FFFFFFFF</item>
    </style>

    <style name="AppTheme.ActionBar.Transparent" parent="AppTheme">
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--EditText-->
    <style name="DearOEditTextTheme" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:backgroundTint">@color/noFocus</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="android:colorControlNormal">@color/noFocus</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DearOEditTextTheme.Inverse" parent="DearOEditTextTheme">
        <item name="android:background">@drawable/edit_border</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <!--TextInputEditText-->
    <style name="DearOTextHintAppearanceInverse" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textColorPrimaryInverse</item>
    </style>

    <!--RadioButton-->
    <style name="DearORadioButton" parent="Base.Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:buttonTint">@color/radio_selector</item>
        <item name="android:textSize">@dimen/body1</item>
    </style>

    <!--AlertDialog-->
    <style name="DearODialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/alert_dialog_background</item>
        <item name="android:windowMinWidthMajor">@dimen/alert_width_major</item>
        <item name="android:windowMinWidthMinor">@dimen/alert_width_minor</item>
        <item name="android:windowTitleStyle">@style/DearODialogTheme.Title</item>
        <item name="android:textColorPrimary">@color/textColorSecondary</item>
        <item name="android:textSize">@dimen/body1</item>
        <item name="android:buttonStyle">@style/DearOTextAppearance.Button.ColorPrimary</item>
        <item name="android:elevation">@dimen/alert_elevation</item>
    </style>
    `

    <style name="DearODialogTheme.Title" parent="">
        <item name="android:fontFamily">@string/font_family_sans_serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/H6</item>
    </style>


    <style name="MrnPartName" parent="DearOTextAppearance.SubtitleMedium">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>


    <style name="MrnPartDescription" parent="DearOTextAppearance.Body.Regular.B2">
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="MrnPartPriceTextStyle" parent="DearOTextAppearance.Body.Regular.B1">
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="MrnPartPriceValueStyle" parent="DearOTextAppearance.SubtitleMedium">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="TransparentDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
